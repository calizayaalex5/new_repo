<div class="login">
    <h1><%= title %></h1>
    <%- messages() %>
    <div class="formulario">
        <form action="/account/login" method="POST">
            <fieldset>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>

                <label for="password">Password</label>
                <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
                <input type="password" id="password" name="password" required minlength="12" pattern="^(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*]).{12,}$>

                <button type="submit">Login</button>
            </fieldset>
        </form>
        <p>No account? <a href="/account/register">Register Here!</a></p>
    </div>
</div>