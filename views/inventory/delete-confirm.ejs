<div class="delete-inventory">
    <h1><%= title %></h1>
    <%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
        </ul>
    <% } %>

    <div class="delete-inventory-form">
        <p>Confirm Deletion - The delete is permanent.</p>

        <form action="/inv/delete" method="POST" class="inventory-form" id="deleteForm">

        <label for="inv_make">Make</label>
        <input
            type="text"
            id="inv_make"
            name="inv_make"
            required
            value="<%= inv.inv_make %>"
            readonly
        >

        <label for="inv_model">Model</label>
        <input
            type="text"
            id="inv_model"
            name="inv_model"
            required
            value="<%= inv.inv_model %>"
            readonly
        >

        <label for="inv_year">Year</label>
        <input
            type="number"
            id="inv_year"
            name="inv_year"
            required
            min="1900"
            max="2100"
            value="<%= inv.inv_year %>"
            readonly
        >

        <label for="inv_price">Price</label>
        <input
            type="number"
            id="inv_price"
            name="inv_price"
            required
            min="0"
            step="1"
            value="<%= inv.inv_price %>"
            readonly
        >

        <button type="submit" id="deleteButton">Delete Vehicle</button>
        <input type="hidden" name="inv_id" value="<%= inv.inv_id %>">
        </form>
    </div>
</div>